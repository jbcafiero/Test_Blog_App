<div class="container">
  <div class="form-group">
    <div class="row">
        <h1 style="margin-top: 50px; margin-bottom: 25px;">Edit Post</h1>
    </div>
    <%= form_for @post, url: update_path(params[:id]), html: { method: :patch } do |p| %>
    <div class="row" style="margin-bottom: 20px;">
      <%= p.label :title %>
      <%= p.text_field :title, class: 'form-control' %>
    </div>
    <div class="row" style="margin-bottom: 20px;">
      <%= p.label :description, class: '' %>
      <%= p.text_area :description, class: 'form-control' %>
    </div>
    <div class="row" style="margin-bottom: 50px;">
        <%= p.submit "Update", class: 'btn btn-primary' %>
    </div>

    <% end %>

  <%= link_to 'Cancle', articles_path, class: "btn btn-danger margin-none" %>

  </div>
