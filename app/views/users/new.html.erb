<div class="container">
  <div class="form-group">
    <div class="row">
        <h1 style="margin-top: 50px; margin-bottom: 25px;">Sign Up</h1>
    </div>
    <%= form_for @user, url: signed_path, html: { method: :post } do |p| %>
    <div class="row" style="margin-bottom: 20px;">
      <%= p.label :username %>
      <%= p.text_field :username, class: 'form-control' %>
    </div>
    <div class="row" style="margin-bottom: 20px;">
      <%= p.label :email, class: '' %>
      <%= p.text_field :email, class: 'form-control' %>
    </div>
    <div class="row" style="margin-bottom: 20px;">
      <%= p.label 'password', class: '' %>
      <%= p.text_field :password_digest, class: 'form-control' %>
    </div>
    <div class="row" style="margin-bottom: 50px;">
        <%= p.submit "Create New Account", class: 'btn btn-primary' %>
    </div>

    <% end %>

  <%= link_to 'Cancle', articles_path, class: "btn btn-danger margin-none" %>

  </div>

</div>
