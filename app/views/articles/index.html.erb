<div class="">
  <div class="container" align="center">
    <div class="row">
      <div class="col-lg-12" align="center" >
        <h1 style="margin-top: 100px; margin-bottom: 75px;">Blog Posts</h1>
        <% @post.each do |post| %>
          <div class="row">
            <div class="col-lg-12" style="height: 50px;">
              <div class="titles fill-area">

                <a class="nav-link show-link" href="#" id="navbarDropdown" data-toggle="dropdown" >
                <%= post.title %>
                <small>- <%= post.user.username %></small>
                </a>
                <ul class="dropdown-menu text-center custom-menu" style="padding: 0;" id="#navbarDropdown">
                <li class="btn btn-info fill-area"><%= link_to 'Show', show_path(post.id), class: 'btn white fill-area' %></li>
                <li class="btn btn-warning fill-area"><%= link_to 'Edit', edit_path(post.id), class: 'btn white fill-area' %></li>
                <li class="btn btn-danger fill-area"><%= link_to 'Delete', article_path(post.id), method: 'delete', class: 'btn white  fill-area' %></li>
                </ul>
              </div>
            </div>
          </div>

        <% end %>

        <%= link_to "Create New Post", articles_new_path, class: "btn btn-primary create-bt" %>
      </div>
    </div>

  </div>
</div>
